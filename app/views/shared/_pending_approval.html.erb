<% pending_approval.each do |post| %>
	<div class="homepage-block col-md-3">
		<h4>
			<%= post.user.full_name %>
		</h4>
		<p><span class='pending-details'>Date suubmitted:</span> <%= post.date %></p>
		<p><span class='pending-details'>Rationale:</span> <%= truncate post.rationale, length: 42 %></p>
		<div class='row'>
			<div class='col-md-6 column'>
				<%= link_to 'Approve', approve_post_path(post), class: 'btn btn-success btn-block', id: "approve_#{post.id}" %>
			</div>
			<div class='col-md-6 column'>
				<%= link_to 'Review', edit_post_path(post), class: 'btn btn-warning btn-block' %>
			</div>
		</div>
	</div>
<% end %>
